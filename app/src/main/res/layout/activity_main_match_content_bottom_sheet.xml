<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="#0d458b"
    android:padding="@dimen/activity_vertical_margin"
    app:behavior_hideable="true"
    app:behavior_peekHeight="60dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/bottomSheetHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_profile"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/cardview_light_background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/profilePicLayout">
        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="40dp"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilePicLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Age:"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/cardview_light_background"
            android:layout_column="0"
            android:layout_row = "1"/>
        <TextView
            android:id="@+id/txtAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="-"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/cardview_light_background"
            android:layout_column="1"
            android:layout_row = "1"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Major:"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/cardview_light_background"
            android:layout_column="0"
            android:layout_row = "2"/>
        <TextView
            android:id="@+id/txtMajor"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="N/A"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/cardview_light_background"
            android:layout_column="1"
            android:layout_row = "2"/>
        <TextView
            android:id="@+id/txtInterestCats"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text=""
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/cardview_light_background"
            android:layout_column="0"
            android:layout_row = "3"/>
        <TextView
            android:id="@+id/txtInterests"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text=""
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/cardview_light_background"
            android:layout_column="1"
            android:layout_row = "3"/>

    </GridLayout>
</RelativeLayout>