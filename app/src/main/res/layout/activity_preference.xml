<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_preference"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="teambool.reslife_matcher.PreferenceActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/pictureButton"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="-100dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="1"
            />

           <!-- <CheckBox
                android:text="Horoscope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chk_horoscope"
                android:textSize="24sp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="2"/>
            -->
            <!--<CheckBox
                android:text="Gender Neutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chk_gender"
                android:textSize="24sp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"/>-->

            <TextView
                android:text="Bed Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:id="@+id/tvBedTime"
                android:layout_row="3"
                android:layout_column="0"/>
            <Spinner
                android:id="@+id/spBedTime"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                />

            <TextView
                android:text="Movie Genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:id="@+id/tvMovie"
                android:layout_row="4"
                android:layout_column="0"/>
            <Spinner
                android:id="@+id/spMovie"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                />

            <TextView
                android:text="Music Genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:id="@+id/tvMusic"
                android:layout_row="5"
                android:layout_column="0"/>
            <Spinner
                android:id="@+id/spMusic"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                />

            <TextView
                android:text="Sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:id="@+id/tvSports"
                android:layout_row="6"
                android:layout_column="0"/>
            <Spinner
                android:id="@+id/spSports"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="1"
                />
            <!--
            <TextView
                android:text="TV Shows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:id="@+id/tvShows"
                android:layout_row="7"
                android:layout_column="0"/>

            <EditText
                android:id="@+id/spShows"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="1"
                />-->

            <TextView
                android:text="Wake up Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:id="@+id/tvWakeup"
                android:layout_row="8"
                android:layout_column="0"/>
            <Spinner
                android:id="@+id/spWakeup"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="1"
                />

        </GridLayout>



    </ScrollView>
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">
        <Button
            android:text="Matching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/matchButton"
            android:gravity="center"
            android:background="#0a3770"
            android:textColor="#fff" />
    </LinearLayout>


</RelativeLayout>